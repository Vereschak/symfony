{% extends "::base.html.twig" %}
{%  block body %}
<div class="page_title" id="page_title">
    <h1>{{ blog.title }}</h1>
</div>
    <article>
        <div class="container blog_container">
            <div class="field field-body">
                {{ blog.body }}
            </div>
            <div class="field field-created">
                {{ blog.created|date('Y-m-d H:i:s') }}
            </div>
        </div>
    </article>
{% endblock %}

